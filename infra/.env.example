# Example Environment Variables
# Copy this file to .env.local or .env.production and fill in your values

# ===== API Configuration =====
ADDR=:8080
PASSCODE=your_passcode
ADMIN_PASS=your_admin_password
JWT_SECRET=your_jwt_secret_at_least_32_chars
DATABASE_URL=postgres://donfra:password@donfra-db:5432/donfra_study?sslmode=disable
JAEGER_ENDPOINT=jaeger:4318
REDIS_ADDR=redis:6379
USE_REDIS=true

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost:8080/api/auth/google/callback
FRONTEND_URL=http://localhost

# LiveKit Configuration
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
LIVEKIT_SERVER_URL=ws://livekit:7880
LIVEKIT_PUBLIC_URL=ws://localhost:7880

# ===== UI Configuration =====
NEXT_PUBLIC_API_BASE_URL=/api
NEXT_PUBLIC_COLLAB_WS=/yjs
API_PROXY_TARGET=http://api:8080
WS_PROXY_TARGET=http://ws:6789
LIVEKIT_PROXY_TARGET=http://livekit:7880

# ===== Database Configuration =====
POSTGRES_USER=donfra
POSTGRES_PASSWORD=your_database_password
POSTGRES_DB=donfra_study
